@model List<Lektion_0129_MVC.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        @{
            bool toggle = true;
            foreach (var oneCar in Model)
            {
                if (toggle)
                {
                    toggle = false;
                    @Html.Partial("_LeftCar", oneCar)
                }

                else
                {
                    toggle = true;
                    @Html.Partial("_RightCar", oneCar)
                }

            }

        }

    </div>
    <div class="col-md-6">
        @Html.ActionLink("Create new cars", "Create")

    </div>
</div>
